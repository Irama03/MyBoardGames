<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.addGame.AddGameFragment"
    android:overScrollMode="never">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        android:paddingStart="2dp"
        android:paddingEnd="2dp">

        <EditText
            android:id="@+id/nameText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="name"
            android:inputType="text"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/descriptionText"
            app:layout_constraintTop_toTopOf="parent" />
        <EditText
            android:id="@+id/descriptionText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="description"
            android:inputType="textMultiLine"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/photoPathText"
            app:layout_constraintTop_toBottomOf="@id/nameText" />
        <EditText
            android:id="@+id/photoPathText"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:hint="photoPath"
            android:inputType="text"
            android:visibility="invisible"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/imageView"
            app:layout_constraintTop_toBottomOf="@id/descriptionText" />
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="200dp"
            android:src="@drawable/ic_cubiki"
            android:adjustViewBounds="true"
            android:contentDescription="Choose photo.."
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/rulesText"
            app:layout_constraintTop_toBottomOf="@id/photoPathText"/>
        <EditText
            android:id="@+id/rulesText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="rules"
            android:inputType="textMultiLine"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/rulesText"
            app:layout_constraintTop_toBottomOf="@id/photoPathText" />
        <EditText
            android:id="@+id/placeText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="place"
            android:inputType="textMultiLine"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/smallestAgeSp"
            app:layout_constraintTop_toBottomOf="@id/rulesText" />
        <include
            layout="@layout/my_spinner"
            android:id="@+id/smallestAgeSp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/biggestAgeSp"
            app:layout_constraintTop_toBottomOf="@id/placeText"/>
        <include
            layout="@layout/my_spinner"
            android:id="@+id/biggestAgeSp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/smallestQuantOfPlayersSp"
            app:layout_constraintTop_toBottomOf="@id/smallestAgeSp"
            />
        <include
            layout="@layout/my_spinner"
            android:id="@+id/smallestQuantOfPlayersSp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/biggestQuantOfPlayersSp"
            app:layout_constraintTop_toBottomOf="@id/biggestAgeSp"/>
        <include
            layout="@layout/my_spinner"
            android:id="@+id/biggestQuantOfPlayersSp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/playingTimeSp"
            app:layout_constraintTop_toBottomOf="@id/smallestQuantOfPlayersSp"/>
        <include
            layout="@layout/my_spinner"
            android:id="@+id/playingTimeSp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/categoriesText"
            app:layout_constraintTop_toBottomOf="@id/biggestQuantOfPlayersSp"/>
        <TextView
            android:id="@+id/categoriesText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/choose_categories"
            android:drawableEnd="@drawable/ic_baseline_arrow_drop_down_24"
            android:drawablePadding="5dp"
            android:width="200dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/favoriteButton"
            app:layout_constraintTop_toBottomOf="@id/playingTimeSp" />
        <ImageButton
            android:id="@+id/addCategoryButton"
            android:layout_width="15dp"
            android:layout_height="21dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_baseline_playlist_add_24"
            app:layout_constraintBottom_toTopOf="@id/favoriteButton"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/playingTimeSp" />
        <ImageButton
            android:id="@+id/favoriteButton"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/ic_baseline_favorite_border_24"
            android:background="@android:color/transparent"
            android:layout_marginStart="30dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/starsButtons"
            app:layout_constraintTop_toTopOf="@id/starsButtons" />
        <include
            layout="@layout/stars"
            android:id="@+id/starsButtons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/addButton"
            app:layout_constraintTop_toBottomOf="@id/categoriesText"/>
